<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/loginEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Input login"
        android:inputType="text"
        android:textColor="@android:color/black"
        bootstrapbutton:be_roundedCorners="true"
        bootstrapbutton:be_state="default" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/pswEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="Input password"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        bootstrapbutton:be_roundedCorners="true"
        bootstrapbutton:be_state="default" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/unLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/appLogoImage"
        android:layout_alignRight="@+id/appLogoImage"
        android:layout_below="@+id/pswEdit"
        android:text="Login"
        bootstrap:bb_icon_right="fa-android"
        bootstrap:bb_type="success" />

    <ImageView
        android:id="@+id/appLogoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginEdit"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_logo" />
</RelativeLayout>